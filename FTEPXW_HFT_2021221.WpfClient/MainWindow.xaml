<Window x:Class="FTEPXW_HFT_2021221.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTEPXW_HFT_2021221.WpfClient"
        mc:Ignorable="d"
        Title="Movie Editor" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Movies}" SelectedItem="{Binding SelectedMovie}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <StackPanel Grid.Column="1">
                <Button Content="Create Movie " Padding="10" Margin="10" Command="CreateMovieCommand"/>
                <Button Content="Update Movie " Padding="10" Margin="10" Command="UpdateMovieCommand"/>
                <Button Content="Delete Movie " Padding="10" Margin="10" Command="DeleteMovieCommand"/>
            </StackPanel>
            
        </ListBox>
    </Grid>
</Window>
